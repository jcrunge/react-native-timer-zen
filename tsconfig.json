{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "removeComments": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist",
    "node_modules",
    "**/__tests__/*"
  ],
}
